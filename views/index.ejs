<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <% if(status === "verified") { %>
        <script>
            if(confirm("Do you want to continue?")){
                window.location.href = "http://localhost:3001/login";
            }
        </script>
    <% } %>
</head>
<body class="d-flex align-items-center justify-content-center">
    <div class="container">
        <h1><%= email %></h1>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2>Please Enter New Password</h2>
                <form action="" method="post" id="password-form">
                    <div class="mb-3">
                        <label for="newpassword" class="form-label">Password</label>
                        <input type="password" name="newpassword" id="newpassword" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="password2" class="form-label">Confirm Password</label>
                        <input type="password" name="password2" id="password2" class="form-control" required />
                    </div>
                    <br/>
                    <div class="text-center">
                        <input type="submit" value="Submit" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.1/js/bootstrap.bundle.min.js" integrity="sha512-sB1XzKyv/0pTTW/6fvh/Jn+DfnzmexrxPYm++n8jxJMLzX9yZZcUXGzjT8TgHiF/lLZGRsYdYsW0eIRJfwo+sQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        document.getElementById("password-form").addEventListener("submit", function(event) {
            var password1 = document.getElementById("newpassword").value;
            var password2 = document.getElementById("password2").value;

            if (password1 !== password2) {
                alert("Passwords do not match.");
                event.preventDefault();
            }
        });
    </script>
</body>
</html>